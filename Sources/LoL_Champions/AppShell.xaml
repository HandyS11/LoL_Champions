<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="LoL_Champions.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
       xmlns:views="clr-namespace:LoL_Champions.Views.Pages"
       Shell.FlyoutBehavior="Disabled">

    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"/>
    </Shell.Behaviors>

    <TabBar>
        <ShellContent Title="Home"
                      Icon="league_icon.png"
                      ContentTemplate="{DataTemplate views:HomePage}"
                      Route="Home" />

        <ShellContent Title="Champions"
                      Icon="sword.png"
                      ContentTemplate="{DataTemplate views:ChampionsPage}"
                      Route="Champions" />
    </TabBar>
</Shell>

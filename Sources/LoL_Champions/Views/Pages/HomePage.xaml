<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoL_Champions.Views.Pages.HomePage"
             Title="Home">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="league_logo.png"
               Margin="50,0"/>

        <VerticalStackLayout Grid.Row="1">
            <Label Text="League of"
                   HorizontalOptions="Center"
                   FontSize="36"/>
            <Label Text="Legends Data"
                   HorizontalOptions="Center"
                   FontSize="36"/>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="2">
            <Label Text="Find information about champions,"
                   HorizontalOptions="Center"
                   FontSize="18"/>
            <Label Text="skins and runes"
                   HorizontalOptions="Center"
                   FontSize="18"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
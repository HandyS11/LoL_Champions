<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:VM;assembly=VM"
             xmlns:model="clr-namespace:Model;assembly=Model"
             xmlns:parts="clr-namespace:LoL_Champions.Views.Parts"
             xmlns:converters="clr-namespace:LoL_Champions.Converters"
             xmlns:local="clr-namespace:LoL_Champions.Views.Pages"
             x:DataType="local:ChampionDetailPage"
             x:Class="LoL_Champions.Views.Pages.ChampionDetailPage"
             Title="ChampionPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Editer"
                     Command="{Binding _navigation.EditChampionCommand}"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Resources>
        <converters:ClassToClassIconConverter x:Key="classToIconConverter"/>
        <converters:Base64ToImageSourceConverter x:Key="imageConverter"/>
    </ContentPage.Resources>

    <Grid>
        <ScrollView Margin="0,0,5,0">
            <VerticalStackLayout>
                <Image Source="{Binding _vm.Image.Base64, Converter={StaticResource imageConverter}}"/>
                <Grid ColumnDefinitions="Auto, *, Auto" Margin="10">
                    <Label Text="{Binding _vm.Name}"
                           Style="{StaticResource Title}"
                           HorizontalOptions="Start"/>
                    <VerticalStackLayout Grid.Column="2">
                        <Image Source="{Binding _vm.Class, Converter={StaticResource classToIconConverter}}"
                               Aspect="AspectFit"
                               WidthRequest="40"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding _vm.Class}"
                               TextColor="{StaticResource Primary}"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Grid>
                <Editor Text="{Binding _vm.Bio}"
                        TextColor="{StaticResource Primary}"
                        Margin="10"
                        IsReadOnly="True"/>
                <Label Text="Caractéristiques"
                       Margin="10"
                       Style="{StaticResource Title}"/>
                <Label Text="Compétences"
                       Margin="10"
                       Style="{StaticResource Title}"/>
                <CollectionView ItemsSource="{Binding _vm.Skills}"
                                MaximumHeightRequest="400">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:Skill">
                            <Label Text="{Binding Name}"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label Text="Skins"
                       Margin="10"
                       Style="{StaticResource Title}"/>
                <CollectionView ItemsSource="{Binding _vm.Skins}"
                                MaximumHeightRequest="400">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:Skin">
                            <Frame BackgroundColor="Transparent">
                                <Label Text="{Binding Name}"/>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
        <parts:SeparatorView/>
    </Grid>
</ContentPage>
